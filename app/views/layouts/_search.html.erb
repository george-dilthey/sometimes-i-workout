  <%= form_tag path, method: :get do %>
      <div class = "row">
        <div class = "col">  
          <%= label_tag :search %>
          <%= text_field_tag :search, @params[:search], placeholder: "Search for a Workout",  class: "form-control" %><br><br> 
        </div>
        <div class = "col-md-auto">
          <%= submit_tag "Search", class: "btn btn-primary mt-4"%>
        </div>
      </div>
  <%end%>

  
