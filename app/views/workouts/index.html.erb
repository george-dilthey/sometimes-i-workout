<div class = "text-center">
    <% if @user%>
        <h1>Your Workouts</h1>
        <%= link_to "Create Workout", new_workout_path%><br><br>
    <%else%>
        <h1>All Workouts</h1>
    <%end%>
</div>


<div class = "container">
    <div class="row row-cols-1 row-cols-md-3 g-4">
            <%= render partial: "workouts", collection: @workouts, as: "workout"%>
    </div>
</div>