

<div class ="container text-center">
    <h2>Log In</h2>
    <%=link_to image_tag("btn_strava_connectwith_orange.svg"), "/auth/strava"%>
</div>

<div class ='container'>
    <%= form_tag login_path do %>
        <div class="form-group">
            <%= label_tag :username %>
            <%= text_field_tag :username, nil, class: 'form-control' %><br>
        </div>
        
        <div class="form-group">
            <%= label_tag :password %>
            <%= password_field_tag :password, nil, class: 'form-control' %><br>
        </div>
        <%= submit_tag "Log In"%>

    <% end %>
</div>





